<launch>
  <!-- Map Server TODO ADD MAP NAME !!!! -->
  
  <arg name="map_file" default="$(find udacity_robot)/maps/wooden_house_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  
  <!-- AMCL node -->
  <node name="amcl" pkg="amcl" type="amcl" output="screen">
    <remap from="scan" to="/udacity_robot/laser/scan"/>
    
    <remap from="scan" to="udacity_robot/laser/scan"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>
    
    <!-- defining the initial x and y position of the robot to give to the AMCL. -->
    <param name="initial_pose_x" value="2.209808"/>
    <param name="initial_pose_y" value="-1.257210"/>
  </node>
  
  <!-- Move Base -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <remap from="scan" to="/udacity_robot/laser/scan"/>
    
    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    
    <rosparam file="$(find udacity_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find udacity_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find udacity_robot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find udacity_robot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find udacity_robot)/config/base_local_planner_params.yaml" command="load" />
  </node>
  
</launch>